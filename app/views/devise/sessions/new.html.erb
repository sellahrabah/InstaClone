<div class="container my-5">
  <div class="card shadow-lg rounded-4 p-5">
    <h2 class="text-center mb-4 text-primary">Log In</h2>

    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>

      <!-- Affichage des messages d'erreurs -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Champ Email -->
      <div class="mb-4">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Champ Mot de passe -->
      <div class="mb-4">
        <%= f.label :password, class: "form-label fw-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Option de se souvenir de l'utilisateur -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-4 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <!-- Bouton de soumission -->
      <div class="text-center">
        <%= f.submit "Log in", class: "btn btn-primary btn-lg w-100 py-2 fw-bold" %>
      </div>

    <% end %>

    <!-- Liens Devise -->
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
