<% if resource.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible fade show" role="alert" data-turbo-cache="false">
    <h4 class="alert-heading">Oops! There was an issue:</h4>
    <p>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </p>
    <ul class="list-unstyled">
      <% resource.errors.full_messages.each do |message| %>
        <li><i class="bi bi-exclamation-circle-fill"></i> <%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
