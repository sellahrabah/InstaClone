<div class="container my-5">
  <div class="card shadow-lg rounded-4 p-5">
    <h2 class="text-center mb-4 text-primary">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <!-- Affichage des messages d'erreurs -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Champ Email -->
      <div class="mb-4">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Champ Mot de passe -->
      <div class="mb-4">
        <%= f.label :password, class: "form-label fw-bold" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- Confirmation du mot de passe -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label fw-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- Bouton de soumission -->
      <div class="text-center">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg w-100 py-2 fw-bold" %>
      </div>

    <% end %>

    <!-- Liens Devise -->
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
