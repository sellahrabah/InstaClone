<div class="container my-5">
  <div class="card shadow-lg rounded-4 p-5">
    <h2 class="text-center mb-4 text-primary">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <!-- Affichage des messages d'erreurs -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Champ Email -->
      <div class="mb-4">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-warning">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Champ Mot de passe -->
      <div class="mb-4">
        <%= f.label :password, class: "form-label fw-bold" %>
        <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Confirmation du mot de passe -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label fw-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <!-- Mot de passe actuel -->
      <div class="mb-4">
        <%= f.label :current_password, class: "form-label fw-bold" %>
        <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <!-- Bouton de soumission -->
      <div class="text-center">
        <%= f.submit "Update", class: "btn btn-success btn-lg w-100 py-2 fw-bold" %>
      </div>

    <% end %>

    <!-- Section d'annulation de compte -->
    <div class="mt-5 text-center">
      <h3 class="text-danger">Cancel my account</h3>
      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100 py-2" %></div>
    </div>

    <!-- Lien retour -->
    <div class="mt-4 text-center">
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>

  </div>
</div>
