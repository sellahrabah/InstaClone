<div class="container my-5">
  <div class="card shadow-lg rounded-4 p-5">
    <h2 class="text-center mb-4 text-primary">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <!-- Affichage des messages d'erreurs -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg w-100 py-2 fw-bold" %>
      </div>

    <% end %>

    <!-- Liens supplÃ©mentaires -->
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
